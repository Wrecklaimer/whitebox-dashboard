{
  "name": "whitebox-dashboard",
  "version": "0.1.0",
  "description": "Dashboard plug-in/template",
  "main": "index.html",
  "scripts": {
    "js:build": "uglifyjs src/scripts/dashboard.js -o dist/scripts/dashboard.min.js --compress --source-map",
    "js:watch": "onchange \"src/scripts/*.js\" -- npm run js:build",
    "sass:build": "node-sass src/styles -o dist/styles --source-map true",
    "sass:watch": "onchange \"src/styles/*.scss\" -- npm run sass:build",
    "dev": "npm-run-all --parallel js:watch sass:watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wrecklaimer/whitebox-dashboard.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Wrecklaimer/whitebox-dashboard/issues"
  },
  "homepage": "https://github.com/Wrecklaimer/whitebox-dashboard#readme",
  "devDependencies": {
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.0.0",
    "uglify-js": "^3.4.0"
  }
}
